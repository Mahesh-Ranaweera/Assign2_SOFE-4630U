extends dashb_layout

block dashb
    script(src='/js/chat.js')

    //.content-card
    .content-card
        .chat-wrapper 
            .chat-header
                | #{msg_data.groupname}
            .chat-content#chatContainer
                for item, i in msg_data.groupchat
                    
                    if item.from ==  gdata.uemail
                        .chat-row
                            .chat-me(title=item.from)
                                .chat-msg
                                    | #{item.msg}
                                .chat-img
                    
                    else
                        .chat-row
                            .chat-other(title=item.from)
                                .chat-img
                                .chat-msg
                                    | #{item.msg}
                
                .chat-row
                    .chat-api-info
                        | Test

            .chat-footer
                .chat-footer-3w
                    form#chatroom()
                        input#chat_data(type='hidden', name='chat_data', value=gdata)
                        input.chat-input#chat_msg(type='text' autofocus placeholder='>' autocomplete='off')
                .chat-footer-w
                    .chat-btns
                        span(uk-icon='icon: image' onclick='imageUploadForm();')
                    .chat-btns
                        span(uk-icon='icon: commenting' onclick='chatSubmitForm();')